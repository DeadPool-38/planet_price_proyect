{
  "version": 2,
  "builds": [
    {
      "src": "backend/bloquesite/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": [
          "backend/**/*",
          "!__pycache__/**"
        ]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build",
        "installCommand": "cd frontend && npm install --loglevel verbose",
        "buildCommand": "cd frontend && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(?<path>.*)",
      "dest": "backend/bloquesite/wsgi.py"
    },
    {
      "src": "/static/(?<file>.*)",
      "dest": "frontend/build/static/$file"
    },
    {
      "src": "/(?<path>.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "backend/bloquesite/wsgi.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}